{
  "author": "Alexandre Bidaud <alexbidaud85@gmail.com> (https://github.com/AlxBDo)",
  "name": "epps",
  "description": "Enhances Pinia stores with advanced features such as persistence, encryption, and store extension. Simplifies state management and ensures data security for Vue.js and Nuxt applications.",
  "files": [
    "dist"
  ],
  "homepage": "https://main.d1f2uye6dxmhh3.amplifyapp.com/",
  "keywords": [
    "Vue",
    "Nuxt",
    "Pinia",
    "extends store",
    "Pinia plugin",
    "persist store",
    "reusable store"
  ],
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/AlxBDo/Epps"
  },
  "version": "0.2.6",
  "type": "module",
  "main": "./dist/epps.umd.cjs",
  "module": "./dist/epps.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/epps.js",
      "require": "./dist/epps.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vitest && vite build && tsc --emitDeclarationOnly --outDir dist",
    "preview": "vite preview",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@pinia/testing": "^1.0.0",
    "@types/node": "^24.0.10",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/coverage-v8": "^3.1.1",
    "@vitest/ui": "^3.1.1",
    "pinia": "^3.0.2",
    "typescript": "^5.8.2",
    "vite": "^6.1.1",
    "vitest": "^3.0.9",
    "vue": "^3.5.16"
  }
}
