{
  "name": "epps",
  "description": "Extends and enhances Pinia stores with advanced features such as persistence, encryption, and store extension. Simplifies state management and ensures data security for Vue.js and Nuxt applications.",
  "keywords": [
    "Vue",
    "Nuxt",
    "Pinia",
    "extends store",
    "Pinia plugin",
    "persist store",
    "reusable store"
  ],
  "files": [
    "dist"
  ],
  "version": "0.1.3",
  "type": "module",
  "main": "./dist/epps.umd.cjs",
  "module": "./dist/epps.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/epps.js",
      "require": "./dist/epps.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vitest && vite build && tsc --emitDeclarationOnly --outDir dist",
    "preview": "vite preview",
    "test": "vitest"
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
    "pinia": "^3.0.1",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@pinia/testing": "^1.0.0",
    "@types/crypto-js": "^4.2.2",
    "@vitejs/plugin-vue": "^5.2.1",
    "typescript": "^5.8.2",
    "vite": "^6.1.1",
    "vitest": "^3.0.9"
  }
}
